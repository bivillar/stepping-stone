{
    "parser": "babel-eslint",
    "plugins": ["import"],
    "rules": {
        "import/no-unresolved": [
            "error",
            {
                "commonjs": true,
                "amd": true,
                "ignore": ["^([a-zA-Z@]+[-\\.]?)+"]
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "globals": {
        "__DEV__": true
    }
}